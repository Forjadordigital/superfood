import Layout from "../layouts/Layout.astro";

---

<Layout title="Quaker by minis Bocaos Food Fest">

	<!-- VIDEOINTRO -->
	<div class="relative flex justify-center w-full min-h-[1200px] overflow-hidden">
		<video
		  autoplay
		  loop
		  muted
		  class=" -z-10 w-auto fixed"
		>
		  <source
			src="/videos/quakerVideo01.webm"
			type="video/webm"
		  />
		  Your browser does not support the video tag.
		</video>
		<img src="/img/quakerHero.webp" alt="Quaker by minis X Boacao Hero Banner" class="w-full z-30 self-end">
	</div>

	<!-- RECETA TORTA VASCA -->
	<section class="w-full min-h-full bg-[#092a3b] z-10 pt-16 shadow-xl shadow-slate-900" style="box-shadow: 10px 10px #0f172a;"> 
		<div class="p-8">
			<img src="/img/quakerTorta00.webp" alt="Quaker by minis Galletas rellenas de cheesecake" class="rounded-md mb-6 shadow-lg">
